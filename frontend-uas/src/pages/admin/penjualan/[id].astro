---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';

// 1. UPDATE INTERFACE SESUAI BACKEND (HURUF BESAR)
interface TransactionItem {
    PRODUCT_NAME: string;
    PRICE_AT_PURCHASE: number;
    QTY: number;
    SUBTOTAL: number;
}

interface TransactionHeader {
    ORDER_ID: number;
    INVOICE_NO: string;
    CUST_NAME: string;
    CUST_ADDRESS: string; // Backend mengirim alamat
    ORDER_DATE: string;
    TOTAL_AMOUNT: number;
    CASHIER_NAME: string; // Backend mengirim nama kasir
    METHOD: string;  // Backend mengirim metode bayar
}

const { id } = Astro.params;
const API_URL = import.meta.env.PUBLIC_API_URL;

let data = null;
let errMsg = null;

try {
    const response = await fetch(`${API_URL}/transaksi/${id}`);
    
    if (response.ok) {
        data = await response.json();
    } else {
        errMsg = "Transaksi tidak ditemukan.";
    }
} catch (e) {
    errMsg = "Gagal terhubung ke server.";
}

// 2. MAPPING DATA (Backend mengirim key 'header' dan 'items')
const trx: TransactionHeader | null = data?.header || null;
const items: TransactionItem[] = data?.items || [];
---

<DashboardLayout title={`Invoice #${id}`} currentPath="penjualan">
    
    <div class="mb-6 flex justify-between items-center print:hidden">
        <a href="/admin/penjualan" class="text-gray-500 hover:text-blue-600 text-sm flex items-center gap-1">
            &larr; Kembali
        </a>
        <button onclick="window.print()" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-blue-700 shadow-sm flex items-center gap-2">
            üñ®Ô∏è Cetak Invoice
        </button>
    </div>

    {errMsg ? (
        <div class="p-8 text-center bg-red-50 text-red-600 rounded-xl border border-red-100">
            {errMsg}
        </div>
    ) : (
        <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden p-10" id="invoice-area">
            
            <div class="flex justify-between items-start border-b border-gray-100 pb-8 mb-8">
                <div>
                    <h1 class="text-3xl font-extrabold text-gray-800 tracking-tight">INVOICE</h1>
                    <p class="text-gray-500 mt-1 font-mono text-sm">{trx?.INVOICE_NO || `#${id}`}</p>
                </div>
                <div class="text-right">
                    <p class="font-bold text-xl text-blue-600">Genexmart Store</p>
                    <p class="text-sm text-gray-500">Jl. Teknologi No. 1</p>
                    <p class="text-sm text-gray-500">Semarang, Indonesia</p>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-8 mb-8">
                <div>
                    <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Tagihan Kepada</h3>
                    <p class="font-bold text-gray-800 text-lg">{trx?.CUST_NAME || 'Pelanggan Umum (Guest)'}</p>
                    <p class="text-gray-500 text-sm mt-1 max-w-xs">{trx?.CUST_ADDRESS || '-'}</p>
                </div>
                <div class="text-right space-y-3">
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block">Tanggal Transaksi</span>
                        <p class="font-medium text-gray-800">
                            {trx?.ORDER_DATE ? new Date(trx.ORDER_DATE).toLocaleDateString('id-ID', { 
                                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric',
                                hour: '2-digit', minute: '2-digit'
                            }) : '-'}
                        </p>
                    </div>
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block">Kasir</span>
                        <p class="font-medium text-gray-800">{trx?.CASHIER_NAME}</p>
                    </div>
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block">Metode Pembayaran</span>
                        <span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded text-xs font-bold">{trx?.METHOD}</span>
                    </div>
                </div>
            </div>

            <div class="border rounded-lg overflow-hidden mb-8">
                <table class="w-full text-left text-sm">
                    <thead class="bg-gray-50 text-gray-700 font-bold border-b border-gray-200">
                        <tr>
                            <th class="p-4">Nama Produk</th>
                            <th class="p-4 text-right">Harga</th>
                            <th class="p-4 text-center">Qty</th>
                            <th class="p-4 text-right">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        {items.map((item) => (
                            <tr>
                                <td class="p-4 text-gray-800 font-medium">{item.PRODUCT_NAME}</td>
                                <td class="p-4 text-right text-gray-600">Rp {parseInt(String(item.PRICE_AT_PURCHASE)).toLocaleString('id-ID')}</td>
                                <td class="p-4 text-center text-gray-600">{item.QTY}</td>
                                <td class="p-4 text-right font-bold text-gray-800">
                                    Rp {parseInt(String(item.SUBTOTAL)).toLocaleString('id-ID')}
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>

            <div class="flex justify-end">
                <div class="w-full md:w-1/2 lg:w-1/3 space-y-3">
                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                        <span class="text-gray-600">Subtotal</span>
                        <span class="font-medium">Rp {parseInt(String(trx?.TOTAL_AMOUNT || 0)).toLocaleString('id-ID')}</span>
                    </div>
                    <div class="flex justify-between items-center py-2">
                        <span class="text-xl font-bold text-gray-800">Total Bayar</span>
                        <span class="text-2xl font-bold text-blue-600">Rp {parseInt(String(trx?.TOTAL_AMOUNT || 0)).toLocaleString('id-ID')}</span>
                    </div>
                </div>
            </div>

            <div class="mt-12 pt-8 border-t border-gray-100 text-center text-sm text-gray-400">
                <p>Terima kasih telah berbelanja di Genexmart Store.</p>
                <p class="text-xs mt-1">Barang yang sudah dibeli tidak dapat ditukar/dikembalikan.</p>
            </div>

        </div>
    )}
</DashboardLayout>

<style is:global>
    @media print {
        /* Sembunyikan elemen yang tidak perlu saat print */
        aside, header, nav, .print\:hidden { display: none !important; }
        
        body { background: white; -webkit-print-color-adjust: exact; }
        main { margin: 0; padding: 0; width: 100%; max-width: 100%; }
        
        /* Reset box shadow dan border agar bersih di kertas */
        #invoice-area { box-shadow: none; border: none; padding: 0; margin: 0; width: 100%; max-width: 100%; }
        
        /* Pastikan background warna tercetak (untuk header tabel dll) */
        * { -webkit-print-color-adjust: exact !important; print-color-adjust: exact !important; }
    }
</style>