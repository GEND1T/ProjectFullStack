---
import DashboardLayout from '../../../../layouts/DashboardLayout.astro';

// DEFINISI TIPE DATA
interface Category { id: string; name: string; }
interface Product { 
    id: number; 
    name: string; 
    category_id: string; 
    price: number; 
    stock: number; 
    image: string | null; // Tambahkan field image
}

const { id } = Astro.params;
const API_URL = import.meta.env.PUBLIC_API_URL;
const SERVER_URL = "http://localhost:3000"; // URL Backend untuk load gambar

let categories: Category[] = [];
let product: Product | null = null;
let errorMsg = null;

try {
    // 1. Fetch Categories
    const catRes = await fetch(`${API_URL}/products/categories`); // Pastikan endpoint benar (kadang /categories atau /products/categories)
    const catData = await catRes.json();
    categories = Array.isArray(catData) ? catData : (catData.data || []);

    // 2. Fetch Product Data
    const prodRes = await fetch(`${API_URL}/products/${id}`);
    if (prodRes.ok) {
        product = await prodRes.json();
    } else {
        errorMsg = "Produk tidak ditemukan.";
    }

} catch (e) {
    errorMsg = "Gagal terhubung ke server.";
    console.error(e);
}

if (!product && !errorMsg) errorMsg = "Sedang memuat...";
---

<DashboardLayout title="Edit Produk" currentPath="products">
    <div class="max-w-2xl mx-auto">
        <div class="mb-6 flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-800">Edit Produk #{id}</h1>
            <a href="/admin/products" class="text-gray-500 hover:text-blue-600 text-sm">
                &larr; Kembali
            </a>
        </div>

        {errorMsg && <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">{errorMsg}</div>}

        {product && (
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <form id="editProductForm" class="space-y-5">
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Foto Produk</label>
                        <div class="flex items-start gap-4">
                            <div class="w-32 h-32 bg-gray-100 rounded-lg border border-gray-200 overflow-hidden relative group">
                                <img 
                                    id="preview-img" 
                                    src={product.image ? `${SERVER_URL}${product.image}` : "https://placehold.co/150?text=No+Image"} 
                                    class="w-full h-full object-cover"
                                    alt="Preview"
                                />
                                <div class="absolute inset-0 bg-black/50 hidden group-hover:flex items-center justify-center text-white text-xs text-center p-1">
                                    Preview
                                </div>
                            </div>

                            <div class="flex-1">
                                <input 
                                    type="file" 
                                    name="image" 
                                    accept="image/*" 
                                    id="fileInput"
                                    class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 transition cursor-pointer"
                                />
                                <p class="mt-2 text-xs text-gray-400">
                                    Biarkan kosong jika tidak ingin mengganti gambar.<br/>
                                    Format: JPG, PNG, GIF. Maks 2MB.
                                </p>
                            </div>
                        </div>
                    </div>

                    <hr class="border-gray-100"/>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Nama Produk</label>
                        <input type="text" name="name" value={product.name} required class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:border-blue-500 transition" />
                    </div>

                    <div class="grid grid-cols-2 gap-5">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Kategori</label>
                            <select name="category_id" required class="w-full px-4 py-2 border border-gray-200 rounded-lg bg-white">
                                <option value="">-- Pilih Kategori --</option>
                                {categories.map((cat: any) => (
                                    <option value={cat.id} selected={cat.id == product?.category_id}>
                                        {cat.name}
                                    </option>
                                ))}
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Stok</label>
                            <input type="number" name="stock" value={product.stock} min="0" class="w-full px-4 py-2 border border-gray-200 rounded-lg" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Harga (Rp)</label>
                        <input type="number" name="price" value={product.price} required min="0" class="w-full px-4 py-2 border border-gray-200 rounded-lg" />
                    </div>

                    <div class="pt-4 flex justify-end gap-3">
                        <a href="/admin/products" class="px-5 py-2.5 rounded-lg text-gray-600 hover:bg-gray-100 font-medium">Batal</a>
                        <button type="submit" class="px-5 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700 font-medium shadow-sm transition transform active:scale-95">
                            Simpan Perubahan
                        </button>
                    </div>
                </form>
            </div>
        )}
    </div>
</DashboardLayout>

<script define:vars={{ API_URL, id }}>
    // 1. LOGIC PREVIEW GAMBAR
    const fileInput = document.getElementById('fileInput');
    const previewImg = document.getElementById('preview-img');

    if (fileInput) {
        fileInput.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
                previewImg.src = URL.createObjectURL(file);
            }
        });
    }

    // 2. LOGIC SUBMIT (MENGGUNAKAN FORMDATA)
    const form = document.getElementById('editProductForm');
    
    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const btn = form.querySelector('button[type="submit"]');
            const originalText = btn.innerText;
            btn.innerText = "Mengupload...";
            btn.disabled = true;

            // PENTING: Gunakan FormData untuk mengirim File + Text
            const formData = new FormData(form);

            try {
                // Method PUT untuk Update
                const response = await fetch(`${API_URL}/products/${id}`, {
                    method: 'PUT',
                    // JANGAN set 'Content-Type': 'application/json' manual!
                    // Biarkan browser mengaturnya otomatis (multipart/form-data boundary)
                    body: formData 
                });
                
                const res = await response.json();

                if (response.ok) {
                    alert("✅ Produk berhasil diupdate!");
                    window.location.href = '/admin/products';
                } else {
                    alert("❌ Gagal: " + (res.message || "Error"));
                    btn.innerText = originalText;
                    btn.disabled = false;
                }
            } catch (error) {
                console.error(error);
                alert("⚠️ Gagal terhubung ke server.");
                btn.innerText = originalText;
                btn.disabled = false;
            }
        });
    }
</script>