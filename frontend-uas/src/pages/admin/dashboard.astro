                            <thead class="bg-gray-50 sticky top-0 z-10 border-b border-gray-200">
                                <tr>
                                    <th class="p-4 font-bold text-gray-700 bg-gray-50 sticky left-0 z-20 shadow-sm min-w-[200px]">Nama Pelanggan</th>
                                    {monthKeys.map(m => <th class="p-3 text-center font-semibold text-gray-600 min-w-[100px]">{m}</th>)}
                                    <th class="p-3 text-right font-bold text-gray-800 bg-gray-100 min-w-[120px]">Total Belanja</th>
                                </tr>
                            </thead>
