---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
const API_URL = import.meta.env.PUBLIC_API_URL;

let stats = null;
let errorMsg = null;
const currentYear = new Date().getFullYear() - 1; // Tahun lalu

try {
  // 1. Jalankan semua fetch secara BERSAMAAN (Paralel)
  const responses = await Promise.all([
    fetch(`${API_URL}/sbd/orders/best-product/last-year`),  // index 0
    fetch(`${API_URL}/sbd/orders/top-customers/last-year`), // index 1
    fetch(`${API_URL}/sbd/orders/top-order-value/last-year`), // index 2
    fetch(`${API_URL}/sbd/orders/top-item-buyers/last-year`), // index 3
    fetch(`${API_URL}/sbd/orders/top-10-products/last-year`), // index 4
    fetch(`${API_URL}/sbd/profit-bulanan-produk`),            // index 5
    fetch(`${API_URL}/sbd/penjualan-bulanan-produk`),         // index 6
    fetch(`${API_URL}/sbd/order-bulanan-customer`),           // index 7
    fetch(`${API_URL}/sbd/nominal-order-customer`),           // index 8
    fetch(`${API_URL}/sbd/layanan-bulanan-kasir`)             // index 9
  ]);

  // 2. Cek apakah ada request yang gagal
  const allOk = responses.every(r => r.ok);

  if (allOk) {
    // 3. Convert semua response ke JSON
    const data = await Promise.all(responses.map(r => r.json()));

    // 4. Masukkan ke variabel stats (Mapping Index Array ke Object Key)
    stats = {
      bestProduct: Array.isArray(data[0]) ? data[0][0] : data[0], 
      topCustomers: Array.isArray(data[1]) ? data[1][0] : data[1],
      topOrderValue: Array.isArray(data[2]) ? data[2][0] : data[2],
      topItemBuyers: Array.isArray(data[3]) ? data[3][0] : data[3],
      
      // Sisanya biarkan array karena memang untuk tabel/list
      top10Products: data[4],
      profitBulanan: data[5],
      penjualanBulanan: data[6],
      orderBulananCust: data[7],
      nominalOrderCust: data[8],
      layananKasir: data[9]
    };
    
  } else {
    const failedIndex = responses.findIndex(r => !r.ok);
    console.error(`Gagal pada URL index ke-${failedIndex}:`, responses[failedIndex]?.url);
    errorMsg = "Gagal memuat sebagian data statistik tahunan.";
  }

} catch (e) {
  console.error(e);
  errorMsg = "Error koneksi server: " + (e instanceof Error ? e.message : String(e));
}

// ... import dan fetch logic sebelumnya tetap sama ...

// Helper untuk daftar nama bulan sesuai key JSON API Anda
const monthKeys = [
  "Januari", "Februari", "Maret", "April", "Mei", "Juni", 
  "Juli", "Agustus", "September", "Oktober", "November", "Desember"
];

// Helper untuk menghitung total row (karena di JSON tidak ada key total_tahunan)
const calculateRowTotal = (item : any) => {
  return monthKeys.reduce((acc, month) => {
    // Parse angka, jika null/string kosong dianggap 0
    const val = parseInt(item[month]) || 0;
    return acc + val;
  }, 0);
};

// Helper Format Rupiah Sederhana
const formatRupiah = (num : any) => "Rp " + (parseInt(num) || 0).toLocaleString('id-ID');

// Helper Functions
const getMonthName = (idx : any) => ["Jan", "Feb", "Mar", "Apr", "Mei", "Jun", "Jul", "Agu", "Sep", "Okt", "Nov", "Des"][idx - 1] || "-";
