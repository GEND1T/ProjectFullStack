---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
const API_URL = import.meta.env.PUBLIC_API_URL;

let data = null;
let errorMsg = null;

// --- 1. FETCH DATA DARI BACKEND ---
try {
    const res = await fetch(`${API_URL}/analysis/all`);
    if (res.ok) {
        data = await res.json();
    } else {
        errorMsg = "Gagal memuat data analisis.";
    }
} catch (e) {
    errorMsg = "Error koneksi server.";
}

// --- 2. HELPER FUNCTIONS (DENGAN TIPE DATA AGAR TIDAK ERROR) ---
const toRupiah = (num: number) => "Rp " + parseInt(String(num || 0)).toLocaleString('id-ID');
const months = ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun', 'Jul', 'Agu', 'Sep', 'Okt', 'Nov', 'Des'];

// Fungsi Pivot: Mengubah data list menjadi format Tabel Bulanan (Array 12 bulan)
const pivotData = (rawData: any[], nameKey: string, valueKey: string) => {
    if (!rawData) return [];
    const map = new Map();
    
    rawData.forEach((row: any) => {
        // Ambil nama (Product Name / Customer Name / Cashier Name)
        const name = row[nameKey] || row.PRODUCT_NAME || row.CUST_NAME || row.USERNAME || 'Unknown';
        
        if (!map.has(name)) {
            map.set(name, Array(12).fill(0)); // Siapkan array 12 bulan isinya 0
        }
        
        // Isi data ke bulan yang sesuai (bulan database 1-12, array index 0-11)
        if (row.bulan >= 1 && row.bulan <= 12) {
            const currentArr = map.get(name);
            currentArr[row.bulan - 1] = parseInt(row[valueKey] || 0);
        }
    });

    // Ubah Map kembali jadi Array
    return Array.from(map.entries()).map(([name, values]) => ({ name, values }));
};

// --- 3. PROSES DATA UNTUK POIN 6-10 ---
const report6 = data ? pivotData(data.monthly_product, 'PRODUCT_NAME', 'revenue') : []; // Profit Produk
const report7 = data ? pivotData(data.monthly_product, 'PRODUCT_NAME', 'qty') : [];     // Qty Produk
const report8 = data ? pivotData(data.monthly_customer, 'CUST_NAME', 'freq') : [];      // Freq Customer
const report9 = data ? pivotData(data.monthly_customer, 'CUST_NAME', 'nominal') : [];   // Nominal Customer
const report10 = data ? pivotData(data.monthly_cashier, 'USERNAME', 'total_layanan') : []; // Layanan Kasir
